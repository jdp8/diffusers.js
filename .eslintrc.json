{
  "extends": [
    "standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "*.test.tsx",
    "*.test.ts"
  ],
  "rules": {
    "@typescript-eslint/member-delimiter-style": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/ban-ts-comment": 0,
    "camelcase": "off",
    "sort-imports": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "object-shorthand": [
      "error"
    ],
    "@typescript-eslint/no-explicit-any": [
      "error"
    ],
    "@typescript-eslint/no-unused-vars": [
      "error"
    ],
    "semi": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "MemberExpression": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        },
        "CallExpression": {
          "arguments": 1
        },
        "ArrayExpression": 1,
        "ObjectExpression": 1,
        "ImportDeclaration": 1,
        "flatTernaryExpressions": false,
        "ignoreComments": false,
        "ignoredNodes": [
          "TemplateLiteral *"
        ]
      }
    ]
  }
}
